@model IEnumerable<Net.Models.SitePage>
@{
    ViewBag.Title = "Site Pages Management";
    Layout = null;
}
<style>
    .td-ellipsis {
        -ms-text-overflow: ellipsis;
        -o-text-overflow: ellipsis;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
        width: 300px;
    }
</style>
<h2>Site Pages Management</h2>
<div class="alert alert-block alert-success">
    <button type="button" class="close" data-dismiss="alert">
        <i class="fa fa-times" aria-hidden="true"></i>
    </button>
    You can manage disable or eanble specific site!!! We are not recommand you update page content.
</div>
<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "SitePages", FormMethod.Get))
    {
    <p>
        Title: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </p>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/netserver")
    </p>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th style="width:100px">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="td-ellipsis">
                        @Html.DisplayFor(modelItem => item.Url)
                    </div>
                </td>
                <td style="padding-left:30px">
                    @Html.DisplayFor(modelItem => item.Disabled)
                </td>

                <td>
                    <div class="td-ellipsis">
                        @Html.DisplayFor(modelItem => item.Title)
                    </div>
                </td>
                <td>
                    <div class="td-ellipsis">
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>
                </td>
                <td style="width:200px">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })

                    @*<a href="@Url.Action("Edit", "SiteInfo", new { id = item.Id }) %">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </a>|
                        <a href="@Url.Action("Delete", "SiteInfo", new { id = item.Id }) %">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>*@
                </td>
            </tr>
        }
    </table>
