@using Net.HostServer;
@{
    ViewBag.Title = "Dashboard";
}
<div id="s_body">
    <div id="body_right">

        @{
            String time = (DateTime.Now - @ViewBag.Begin).TotalSeconds + "s";
            String mem = (System.GC.GetTotalMemory(false) / 1024 / 1024) + "MB ";
        }

        <div class="container">
            <div class="form-horizontal" style="max-width:400px;">
                <div class="form-group">
                    <label class="col-sm-2 control-label" style="padding-top:0">Time:</label>
                    <div class="col-sm-10">
                        <span class="label label-default">@time</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" style="padding-top:0">MEM:</label>
                    <div class="col-sm-10">
                        <span class="label label-default">@mem</span>
                    </div>
                </div>
            </div>
            <h3>List Group With Site Summary</h3>
            <div class="list-group" style="max-width:400px;">
                <a class="list-group-item">Collected links:  <span class="badge">@ViewBag.ProcessLinksCount</span></a>
                <a class="list-group-item">Verified site: <span class="badge">@ViewBag.SiteInfoCount</span></a>
                <a class="list-group-item">SuccessCollected pages: <span class="badge">@ViewBag.SitePageCount</span></a>
                <a class="list-group-item">Searched words: <span class="badge">>@ViewBag.WordsCount</span></a>
                <a class="list-group-item">Linked url: <span class="badge">@ViewBag.linkedCount</span></a>
            </div>
        </div>
    </div>
</div>